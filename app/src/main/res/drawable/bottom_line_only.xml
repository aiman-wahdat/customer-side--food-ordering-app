<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color, change as needed -->
    <item android:drawable="@android:color/white" />

    <!-- Bottom line (underline) -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="-1dp"> <!-- Adjust top to control the thickness of the line -->
        <shape>
            <solid android:color="@android:color/black" /> <!-- Line color, change as needed -->
        </shape>
    </item>
</layer-list>
